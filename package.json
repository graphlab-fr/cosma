{
  "name": "@graphlab-fr/cosma",
  "version": "2.0.0",
  "description": "Cosma is a document graph visualization tool. It modelizes interlinked Markdown files and renders them as an interactive network in a web interface.",
  "homepage": "https://cosma.graphlab.fr/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graphlab-fr/cosma-cli.git"
  },
  "bugs": {
    "url": "https://github.com/graphlab-fr/cosma-cli/issues"
  },
  "main": "app.js",
  "bin": {
    "cosma": "app.js"
  },
  "scripts": {
    "test": "./node_modules/.bin/mocha",
    "format": "./node_modules/.bin/prettier --write --list-different './**/**+(.js|.css)'"
  },
  "contributors": [
    "Arthur Perret",
    "Guillaume Brioudes",
    "Olivier Le Deuff",
    "Cl√©ment Borel"
  ],
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@zettlr/citr": "^1.2.2",
    "axios": "^0.27.2",
    "citeproc": "^2.4.62",
    "commander": "^8.3.0",
    "csv-parse": "^5.3.0",
    "d3-array": "^2.12.1",
    "d3-scale": "^3.3.0",
    "env-paths": "^2.2.1",
    "glob": "^7.2.0",
    "markdown-it": "^13.0.1",
    "markdown-it-attrs": "^4.1.4",
    "nunjucks": "^3.2.3",
    "slugify": "^1.6.5",
    "yaml": "^2.2.1"
  },
  "directories": {
    "doc": "docs"
  },
  "keywords": [],
  "author": "Guillaume Brioudes (https://myllaume.fr/)",
  "devDependencies": {
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}
