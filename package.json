{
  "name": "cosma",
  "version": "1.1.0",
  "description": "Cosma is a document graph visualization tool. It modelizes interlinked Markdown files and renders them as an interactive network in a web interface.",
  "homepage": "https://cosma.graphlab.fr/",
  "repository": {
    "type": "git",
    "url": "https://github.com/graphlab-fr/cosma.git"
  },
  "bugs": {
    "url": "https://github.com/graphlab-fr/cosma/issues"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-packager ./ Cosma --out=build/win --icon=./assets/icons/1024x1024.ico --platform=win32 --arch=x64",
    "build-mac": "electron-packager ./ Cosma --out=build/osx --icon=./assets/icons/1024x1024.icns --platform=darwin --arch=x64",
    "doc-gen": "cd docs && sh pandoc-build.sh",
    "doc-upload": "ghp-import -p docs"
  },
  "contributors": [
    "Arthur Perret",
    "Guillaume Brioudes",
    "Olivier Le Deuff",
    "Cl√©ment Borel"
  ],
  "license": "GNU GPL 3.0",
  "devDependencies": {
    "electron": "^15.3.4",
    "electron-packager": "^15.4.0"
  },
  "dependencies": {
    "@zettlr/citr": "^1.2.2",
    "citeproc": "^2.4.62",
    "js-yaml": "^4.1.0",
    "markdown-it": "^12.3.0",
    "markdown-it-attrs": "^4.1.3",
    "moment": "^2.29.1",
    "nunjucks": "^3.2.3",
    "slugify": "^1.6.5",
    "yaml-front-matter": "^4.1.1"
  }
}
