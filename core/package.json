  "repository": {
    "type": "git",
    "url": "https://github.com/graphlab-fr/cosma-core.git"
  },
  "bugs": {
    "url": "https://github.com/graphlab-fr/cosma-core/issues"
  },
  "main": "index.js",
  "contributors": [
    "Arthur Perret",
