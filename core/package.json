    "d3-scale": "^3.3.0",
    "fuse.js": "^6.6.2",
    "glob": "^7.2.0",
    "graphology": "^0.25.1",
    "graphology-traversal": "^0.3.1",
    "hotkeys-js": "^3.10.0",
    "markdown-it": "^13.0.1",
