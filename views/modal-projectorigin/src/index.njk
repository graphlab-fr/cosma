<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self'">
    <meta http-equiv="X-Content-Security-Policy" content="default-src 'self'; script-src 'self'">
    
    <link rel="stylesheet" href="../../style.css">
</head>

<body>
    
    <main>

        <form id="form-origin">
            <label>
                {{ lang.fields.select_origin[flag] }}
                <select name="select_origin" id="files-select">
                    <option value="directory">{{ lang.fields.directory_origin[flag] }}</option>
                    <option value="csv">{{ lang.fields.csv_origin[flag] }}</option>
                    <option value="online">{{ lang.fields.online_origin[flag] }}</option>
                </select>
            </label>
            
            <label>
                {{ lang.fields.files_origin[flag] }}
                <input type="text" name="files_origin">
                <button type="button" data-path="directory" id="dialog-path-fileorigin">{{ lang.btns.select[flag] }}</button>
            </label>
    
            <label>
                {{ lang.fields.nodes_origin[flag] }}
                <input type="text" name="nodes_origin">
                <button type="button" data-path="csv" id="dialog-path-nodeorigin">{{ lang.btns.select[flag] }}</button>
            </label>
    
            <label>
                {{ lang.fields.links_origin[flag] }}
                <input type="text" name="links_origin">
                <button type="button" data-path="csv" id="dialog-path-linkorigin">{{ lang.btns.select[flag] }}</button>
            </label>
    
            <label>
                {{ lang.fields.nodes_online[flag] }}
                <input type="text" data-path="online" name="nodes_online">
            </label>
    
            <label>
                {{ lang.fields.links_online[flag] }}
                <input type="text" data-path="online" name="links_online">
            </label>

            <div class="cancel-ok">
                <button class="window-close" type="button">{{ langBtnCancel[flag] }}</button>
                <button class="primary" type="submit">{{ langBtnOk[flag] }}</button>
            </div>
        </form>

    </main>

    <script src="../render.js"></script>
</body>

</html>