<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self'">
    <meta http-equiv="X-Content-Security-Policy" content="default-src 'self'; script-src 'self'">
    
    <link rel="stylesheet" href="../../style.css">
</head>

<body>
    
    <main>

        <form id="form-export">
            <label>
                {{ lang.fields.export[flag] }}
                <input type="text" name="export_target">
                <button type="button" data-path="directory" id="dialog-path-export">{{ lang.btns.select[flag] }}</button>
            </label>

            <label>
                <input type="checkbox" name="css_custom" disabled>
                {{ lang.fields.css_custom[flag] }}
            </label>

            <label>
                <input type="checkbox" name="citeproc" disabled>
                {{ lang.fields.citeproc[flag] }}
            </label>

            <output></output>

            <div class="cancel-ok">
                <button class="window-close" type="button">{{ langBtnCancel[flag] }}</button>
                <button class="primary" type="submit">{{ langBtnOk[flag] }}</button>
            </div>
        </form>

    </main>

    <script src="../render.js"></script>
</body>

</html>