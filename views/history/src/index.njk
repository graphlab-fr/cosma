<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self'">
    <meta http-equiv="X-Content-Security-Policy" content="default-src 'self'; script-src 'self'">
    
    <link rel="stylesheet" href="../../style.css">
</head>

<body>
    
    <main>

        <form id="form-history" class="form-list">
            <table>
                <thead>
                    <th width="10px"></th>
                    <th>{{ lang.table_header.date[flag] }}</th>
                    <th>{{ lang.table_header.description[flag] }}</th>
                </thead>
                <tbody></tbody>
            </table>

            <div class="buttons-box">
                <button data-action="update" type="submit">{{ lang.btns.update[flag] }}</button>
                <button data-action="open-cosmoscope">{{ lang.btns.open_cosmoscope[flag] }}</button>
                <button data-action="open-finder">{{ lang.btns.open_finder[flag] }}</button>
                <button data-action="open-report">{{ lang.btns.open_report[flag] }}</button>
                <button data-action="delete" type="submit">{{ lang.btns.delete[flag] }}</button>
                <button data-action="delete-all" type="submit">{{ lang.btns.delete_all[flag] }}</button>
            </div>
        </form>

    </main>

    <script src="../render.js"></script>
</body>

</html>